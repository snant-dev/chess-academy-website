---
import { Link } from "@nextui-org/react";
import PriceCharacteristic from "./PriceCharacteristic.astro";

const {
  title,
  price,
  timeSpectrum = "mes",
  characteristics = [
    "Acceso a una clase grupal por semana",
    "Participaci√≥n en 1 evento online mensual",
    "Mini-clase de posicionamiento de nivel",
  ],
} = Astro.props;
---

<div
  class="mb-4 overflow-hidden rounded-lg shadow-lg flex-grow md:w-1/3 md:max-w-[350px] flex flex-col justify-between bg-white"
>
  <div class="px-6 py-8 bg-white dark:bg-gray-800 sm:p-10 sm:pb-6">
    <div class="flex justify-center">
      <span
        class="inline-flex px-4 py-3 text-lg font-semibold leading-5 tracking-wide uppercase rounded-full dark:text-white text-center"
      >
        {title}
      </span>
    </div>
    <div
      class="flex justify-center mt-4 text-6xl font-extrabold leading-none dark:text-white"
    >
      ${price || 10}
      <span
        class="pt-8 ml-1 text-2xl font-medium leading-8 text-gray-500 dark:text-gray-400"
      >
        /{timeSpectrum}
      </span>
    </div>
  </div>
  <div class="px-6 pt-0 pb-8 bg-white dark:bg-gray-800 sm:p-10 sm:pt-0">
    <ul>
      {
        characteristics.map((characteristic) => (
          <PriceCharacteristic characteristic={characteristic} />
        ))
      }
    </ul>
    <div class="mt-6 rounded-md shadow">
      <Link
        href="https://forms.gle/KAD3W7jwE4buhuhK7"
        target="_blank"
        className="flex items-center justify-center px-5 py-3 text-base font-medium leading-6 text-gray-700 transition duration-150 ease-in-out bg-[#ff8c00c2] border border-transparent rounded-md hover:bg-[#ffba67c2] focus:outline-none focus:shadow-outline"
      >
        Incribirme
      </Link>
    </div>
  </div>
</div>

---
import { Link } from "@nextui-org/react";
import PriceCharacteristic from "./PriceCharacteristic.astro";

const {
  title,
  price,
  timeSpectrum = "mes",
  formLink = "#",
  characteristics = [
    "Acceso a una clase grupal por semana",
    "Participaci√≥n en 1 evento online mensual",
    "Mini-clase de posicionamiento de nivel",
  ],
} = Astro.props;
---

<div
  class="mb-4 overflow-hidden rounded-lg shadow-lg drop-shadow flex-grow md:w-1/3 md:max-w-[350px] flex flex-col justify-start bg-white"
>
  <div class="px-6 py-8 bg-white dark:bg-gray-800 sm:p-10 sm:pb-6">
    <div class="flex justify-center">
      <span
        class="inline-flex px-4 py-3 text-lg font-semibold leading-5 tracking-wide uppercase rounded-full dark:text-white text-center"
      >
        {title}
      </span>
    </div>
    <div
      class="flex justify-center mt-4 text-6xl font-extrabold leading-none dark:text-white"
    >
      ${price || 10}
      <span
        class="pt-8 ml-1 text-2xl font-medium leading-8 text-gray-500 dark:text-gray-400"
      >
        /{timeSpectrum}
      </span>
    </div>
  </div>
  <div
    class="px-6 pt-0 pb-8 bg-white dark:bg-gray-800 sm:p-10 sm:pt-0 flex flex-col justify-between h-full"
  >
    <ul>
      {
        characteristics.map((characteristic) => (
          <PriceCharacteristic characteristic={characteristic} />
        ))
      }
    </ul>
    <div class="mt-6 rounded-md flex flex-col gap-8">
      <a
        href={formLink}
        target="_blank"
        class="flex items-center justify-center px-5 py-3 text-base font-medium leading-6 transition-colors duration-250 text-white bg-[#ff8c00c2] border border-transparent rounded-md hover:bg-[#ff8c00e8] focus:shadow-outline shadow active:bg-[#ff8c00c2]"
      >
        Incribirme
      </a>
    </div>
  </div>
</div>
